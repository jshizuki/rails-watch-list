<div class="container">
  <h1>My movie lists</h1>
  <% @lists.each do |list| %>
    <p><%= link_to list.name, list_path(list) %></p>
    <% if list.photo.attached?  %>
    <p><%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %></p>
    <% else %>
    <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>
    <% end %>
  <% end %>
  <p><%= link_to "Create a new list", new_list_path, class: "btn btn-secondary" %></p>
</div>
