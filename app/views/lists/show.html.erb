<div class="container mt-2">
  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-6">
        <div class="card-product m-2">
          <%= image_tag movie.poster_url, alt: "poster" %>
          <div class="card-product-infos">
            <h2><%= movie.title %></h2>
            <p><%= movie.overview %></p>
            <p><%= movie.rating %></p>
            <p><%= link_to "Remove", bookmark_path(@list.bookmarks.find_by_movie_id(movie)), data: { turbo_method: :delete, turbo_confirm: "Delete?" }  %></p>
            <% movie.bookmarks.each do |bookmark|%>
              <p><%= bookmark.comment %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-secondary' %></p>
    <p><%= link_to "Back to lists", lists_path, class: 'btn btn-secondary' %></p>
  </div>
</div>
