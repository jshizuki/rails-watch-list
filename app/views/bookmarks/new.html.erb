<div class="container">
  <h1>Add a movie to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark] do |b| %>
  <%= b.input :comment %>
  <%= b.association :movie, collection: Movie.order(title: :asc) %>
  <%= b.submit class: 'btn btn-secondary mt-2' %>
  <% end %>
  <p><%= link_to "Back to list", list_path(@list), class: 'btn btn-secondary mt-2' %></p>
</div>
